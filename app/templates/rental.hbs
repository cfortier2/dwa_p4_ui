<form method='POST' id='rental-listing' class="rental-form">
  Title: {{input type="string" value=title placeholder=model.title class="form-control" autofocus="autofocus" disabled=isDisabled}}
  Owner: {{input type="string" value=owner placeholder=model.owner class="form-control" autofocus="autofocus" disabled=isDisabled}}
  Type: {{input type="string" value=type placeholder=model.type class="form-control" autofocus="autofocus" disabled=isDisabled}}
  City: {{input type="string" value=city placeholder=model.city class="form-control" autofocus="autofocus" disabled=isDisabled}}
  Summary: {{input type="string" value=summary placeholder=model.summary class="form-control" autofocus="autofocus" disabled=isDisabled}}
  Email Address:{{input type="string" value=emailAddress placeholder=model.emailAddress class="form-control" autofocus="autofocus" disabled=isDisabled}}
  Price: {{input type="string" value=price placeholder=model.price class="form-control" autofocus="autofocus" disabled=isDisabled}}
  Available: {{input type="string" value=available_month placeholder=model.available_month class="form-control" autofocus="autofocus" disabled=isDisabled}}
</form>

{{#each model.images as |image|}}
  <img src={{image.url}} width=50px height=50px class="img-rounded">
{{/each}}

  {{#if isDisabled}}
    <button class="btn btn-primary btn-lg" {{action "enableEdit"}}>Update Listing</button>
  {{else}}
    <button class="btn btn-primary btn-lg" {{action "updateListing" model.id}}>Save Update</button>
  {{/if}}

  <button class="btn btn-primary btn-lg" {{action 'deleteListing' model.id}}>DELETE Listing</button>

