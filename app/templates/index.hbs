<div class='index-div'>
<h1>Welcome to Rentals</h1>

<p>Please select a listing below or click the 'create listing' button to create a new listing.</p>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th>Owner</th>
    <th>City</th>
    <th>Type</th>
  </tr>

  <tbody>
  {{#each model as |rental|}}
    {{#link-to "rental" rental tagName="tr"}}
      <td>{{rental.title}}</td>
      <td>{{rental.owner}}</td>
      <td>{{rental.city}}</td>
      <td>{{rental.type}}</td>
    {{/link-to}}
  {{/each}}
  </tbody>
</table>

{{outlet}}
</div>
