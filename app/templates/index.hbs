<div class='index-div'>
<h1>Welcome to Rentals</h1>

<p>We hope you find exactly what you're looking for in a place to stay.</p>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th>Owner</th>
    <th>City</th>
    <th>Type</th>
  </tr>

  <tbody>
  {{#each model as |rental|}}
    {{#link-to "rental" rental tagName="tr"}}
      <td>{{rental.title}}</td>
      <td>{{rental.owner}}</td>
      <td>{{rental.city}}</td>
      <td>{{rental.type}}</td>
    {{/link-to}}
  {{/each}}
  </tbody>
</table>

{{outlet}}

{{#link-to "about"}}About{{/link-to}}
{{#link-to "contact"}}Click here to contact us.{{/link-to}}
{{#link-to "create-listing"}}Click here to create a new listing.{{/link-to}}
</div>
